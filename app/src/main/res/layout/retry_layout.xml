<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <Button
        android:id="@+id/retry_button"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_margin="20dp"
        android:text="@string/retry"
        android:textColor="@color/retryTextColor"
        android:background="@drawable/retry_button_background"/>

    <TextView
        android:id="@+id/retry_text_2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/alien_block"
        android:gravity="center"
        android:textSize="16sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/retry_button"
        android:layout_marginBottom="100dp"/>

    <TextView
        android:id="@+id/retry_text_1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/something_wrong"
        android:textStyle="bold"
        android:textSize="24sp"
        android:gravity="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/retry_text_2"
        android:layout_marginBottom="10dp"/>

    <ImageView
        android:id="@+id/retry_image"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/retry_button"
        android:src="@drawable/nointernet_connection"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/retry_text_1"/>

</android.support.constraint.ConstraintLayout>